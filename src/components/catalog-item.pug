mixin catalog-item(href, title, img, description)
  a(href=href, class="")
    div(class="flex items-baseline justify-between gap-x-6")
      h3(class="text-h3")= title
      span(class="text-primary")
        svg(
          width="14",
          height="13",
          viewbox="0 0 14 13",
          fill="none",
          xmlns="http://www.w3.org/2000/svg"
        )
          path(
            d="M1.03518e-07 0.5L5.46736 6.5L0 12.5H2.73368L8.20099 6.49995L2.73368 0.5H1.03518e-07Z",
            fill="currentColor"
          )
          path(
            d="M5.79901 0.5L11.2664 6.5L5.79901 12.5H8.53269L14 6.49995L8.53269 0.5H5.79901Z",
            fill="currentColor"
          )
    img(src=img, alt="")
    p!= description
