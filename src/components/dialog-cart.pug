include ./button
include ./counter

mixin dialog-cart
  template#cart
    div(
      class="group fixed inset-0 z-20 grid place-items-center overflow-hidden",
      data-modal-root="cart"
    )
      div(
        class="max-h-svh w-full max-w-[53.75rem] animate-modalOpen overflow-auto bg-card-background ~px-[1.25rem]/[3.125rem] ~pt-[1.5rem]/[1.875rem] ~pb-[1.875rem]/[3.375rem] group-aria-hidden:animate-modalClose",
        data-modal-wrapper=""
      )
        div(class="flex items-center justify-end")
          button(
            type="button",
            class="inline-flex h-[0.875rem] w-[0.875rem] items-center justify-center",
            data-modal-close=""
          )
            svg(
              width="100%",
              height="100%",
              viewbox="0 0 16 16",
              fill="none",
              xmlns="http://www.w3.org/2000/svg"
            )
              path(
                d="M1 1L15 15M15 1L1 15",
                stroke="currentColor",
                stroke-width="2"
              )
        h2(class="mt-3 font-bold leading-[1.3] ~text-[1.375rem]/[2rem]") Добавить в корзину
        h5(class="text-h5 font-bold leading-snug ~mt-[1.5rem]/[1.875rem]") Деталь для ПЛУГ ЧИЗЕЛЬНЫЙ ПЧ-4,5
        span(class="block ~mt-1/3") 2015
        form(
          action="/",
          method="get",
          data-form="",
          novalidate="",
          data-form-no-reset="",
          data-form-success-increment-cart-counter="",
          class="bg-border/25 ~mt-[1.25rem]/[1.625rem] ~p-4/[1.875rem]"
        )
          div(class="col-span-full grid grid-cols-[1fr_auto] space-y-3 sm:grid-cols-3")
            div(
              class="col-span-full grid grid-cols-subgrid gap-x-4 gap-y-1 border-b border-border pb-2"
            )
              div(class="space-y-1 sm:contents")
                div(
                  class="leading-[1.3] ~text-sm/base sm:[[data-layout-changed]_&]:col-span-2"
                )
                  p(data-part-title="") 
                div(
                  class="row-start-2 text-description ~text-xs/base sm:col-start-2 sm:row-start-1 sm:text-center"
                ) 
                  p(data-part-article="") 
              div(class="flex justify-end") 
                +counter(data-part-id-input-name="")
            div(
              class="col-span-full mt-3 grid grid-cols-subgrid items-baseline text-description ~text-sm/base"
            )
              div(class="sm:col-span-2")
                p Запчастей в стандартной комплектации
              div(class="col-start-3 text-right") 
                span(data-part-set="") 
                |
                | шт
          +button(
            type="submit",
            class="w-full ~mt-8/10 aria-hidden:hidden sm:w-auto",
            data-form-success-submitter-replace="to-cart",
            aria-hidden="false"
          ) Добавить в корзину
          +button("default", true)#to-cart(
            href="/cart.html",
            class="w-full ~mt-8/10 aria-hidden:hidden sm:w-auto",
            aria-hidden="true"
          ) В корзине
      span(tabindex="0", class="focus-guard", data-focus-guard="")
