extends ../layouts/auth

include ../../components/breadcrumbs
include ../../components/button
include ../../components/counter

block content
  main(class="col-[main] grid grid-cols-subgrid ~pt-[8.375rem]/[12.5625rem]")
    div(class="col-span-full") 
      +breadcrumbs([{href: "index.html", value: "Каталог запчастей"}, {href: "catalog-detail.html", value: "Бороны"}, {href: "equipment.html", value: "DANA БДП-6×2У"}, {href: "equipment-detail.html", value: "СБ Сница"}], "Корзина")(
        class="mb-[1.875rem]"
      )
      h1(class="text-h1 font-bold") Моя корзина
