        div(
          class="col-span-full grid grid-cols-subgrid gap-x-4 gap-y-1 border-b border-border pb-2"
        )
          div(class="space-y-1 sm:contents")
            div(class="leading-[1.3] ~text-sm/base")
              p Кронштейн
            div(
              class="row-start-2 text-description ~text-xs/base sm:col-start-2 sm:row-start-1 sm:text-center"
            ) 
              p РЗЗ.09.03.020
          div(class="flex justify-end") 
            input(
              type="text",
              hidden="",
              name="id",
              data-form-body-key="4",
              value="1"
            )
            +counter(name="qnt", data-form-body-key="4")
      div(class="col-span-full mt-10")
