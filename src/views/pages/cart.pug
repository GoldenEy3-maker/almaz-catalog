      action="/",
      method="get",
      novalidate="",
      data-form="",
      data-form-request-as-array="data",
      data-form-no-reset="",
      data-form-success-redirect="order-success.html",
      class="col-span-full grid grid-cols-subgrid bg-card-background ~mt-6/11 ~px-4/[2.375rem] ~pt-6/[2.375rem] ~pb-3/[2.375rem] md:col-[span_14] xl:col-span-10"
