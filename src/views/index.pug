extends layouts/root.pug

include ../components/catalog-item

block content
  main(class="col-[main] grid grid-cols-subgrid ~pt-[8.375rem]/[14.5625rem]")
    section(class="@container col-span-full")
      h1(class="text-h1 font-bold ~mb-4/12") Каталог оригинальных запчастей
      div(
        class="@[100.5rem]:grid-cols-[repeat(auto-fill,minmax(32rem,1fr))] @3xl:grid-cols-[repeat(auto-fill,minmax(24rem,1fr))] grid ~gap-6/9"
      )
        +catalog-item("#", "Бороны", "/assets/img/borons.webp", "Для безотвальной предпосевной и&nbsp;основной обработки почвы. Используются под зерновые, технические и&nbsp;кормовые культуры")
